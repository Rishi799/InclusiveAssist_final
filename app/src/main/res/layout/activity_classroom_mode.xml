    android:textColor="#AAAAAA"
    android:textSize="16sp"
    android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”´ LIVE LISTENING..."
